/* pages/musicInfo/musicInfo.wxss */
/* 清除浮动 */
.clearfix::after{
    clear: both;
    content: "";
    visibility: hidden;
    line-height: 0;
    height: 0;
  }
.title{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 274px;
    overflow: hidden;
    color: #fff;
    background: #fff;
    z-index: 4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    /* background: rgba(0,0,0,.5); */
}
.title_t{
    width: 100%;
    display: flex;
    padding: 0 16px;
    margin-top: 65px;
    z-index: 4;

}
.title_t image{
        width: 125px;
        height: 100%;
        margin-right: 10px;
}
.toplist{
    font-size: 18px;
}
.date{
    font: 300 12px/1.5 sans-serif;
}
.play{
    display: -webkit-box;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    height: 84px;
    padding: 0 16px;
    -webkit-transition: 1s ease-in-out;
    z-index: 4;
}
.stop{
    display: -webkit-box;
    -webkit-box-pack: center;
    -webkit-box-align: center;
    min-width: 130px;
    padding: 0 20px;
    height: 40px;
    overflow: hidden;
    text-align: center;
    font-size: 16px;
    color: #fff;
    border-radius: 20px;
    background: #31c27c;
}
.play_a{
    position: relative;
    height: 30px;
    width: 30px;
    border:solid 1px #31c27c;
    border-radius: 50%;
}
.play_a::before{
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top:-5px; 
    margin-left:-4px; 
    content: "";
    display: block;
    height: 0;
    width: 0;
    margin-right: -3px;
    border-color: transparent transparent transparent #31c27c;
    border-width: 7px 11px;
    border-style: solid;
    border-radius: 2px;
}
.stop::before{
    content: "";
    display: block;
    height: 0;
    width: 0;
    margin-right: -3px;
    border-color: transparent transparent transparent #fff;
    border-width: 7px 11px;
    border-style: solid;
    border-radius: 2px;
}
.bgimg{
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100%;
    object-fit: cover;
    height: 274px;
    filter: blur(20px);
}
.list{
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    padding-top: 274px;
    padding-bottom: 50px;
    overflow: hidden;
    will-change: transform;
}
.list_title{
    padding: 15rpx;
}
.li{
    float: left;
    height: 124rpx;
    line-height: 105rpx;
    text-align: center;
    width: 10%;
}
.li_text{
    float: left;
    padding: 10px 16px;
}
.list_li{
    height: 124rpx;
}
.li_singername{
    font-size: 24rpx;
    color: #777;
}